@using MiniProject319.ViewModels;
@{
    List<VMListDoctor> vMListDoctors = Model;
    bool isLogin = false;
}

<div class="pagetitle">
    <h1>List Dokter</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Data Dokter</li>
        </ol>
    </nav>
    <div>
    <p>Hasil Pencarian Berdasarkan kata kunci: </p><button class="btn btn-outline-secondary">Lokasi Jabodetabek</button>
    <p>Spesialiasi/ Sub-spesialisasi: </p><button class="btn btn-outline-secondary">Anak</button>
    </div>
        <a class="btn btn-outline-secondary" id="reset_pencarian">
            Ulangi Pencarian
        </a>
</div><!-- End Page Title -->

<div class="card pt-4">
    <div class="card-body">
        <div class="row row-cols-auto gap-2">
            @foreach (var item in vMListDoctors)
            {
                int BiodataId = Context.Session.GetInt32("Biodata") ?? 0;

                <div class="card mb-3 w-45">
                    @*<div class="row g-0">*@
                    <!-- Image -->
                    @*<div class="col-md-4">
                <img src="~/assets/img/image.png"
                class="card-img img-fluid rounded-start"
                alt="image"
                style="object-fit: cover; width: 100%; height: 100%; border-bottom-right-radius: 0px; border-top-right-radius: 0px;">
                </div>*@

                    <!-- Caption -->
                    @*<div class="col-md-8">*@
                    <div class="card-body">
                        <h5 class="card-title">@item.NameDoctor</h5>
                        <p class="card-text"><small class="text-body-secondary">@item.NameSpecialist | @item.RiwayatPraktek.Where(a => a.DoctorId == item.DoctorId).Max(a => a.LamaBekerja) Tahun</small></p>
                        @foreach (var items in item.RiwayatPraktek)
                        {
                            if (items.DoctorId == item.DoctorId)
                            {

                                <p class="card-text">@items.MedicalFacilityName - @items.Location</p>
                            }
                        }
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary">Buat Janji</button>
                            @if (isLogin == true)
                            {
                                <button class="btn btn-outline-primary">Chat</button>
                            }
                            else
                            {
                                <button class="btn btn-outline-secondary" disabled>Offline</button>
                            }
                        </div>
                    </div>
                    <div class="card-footer">
                        <a dataid="@item.DoctorId" class="btn" id="btn_detail">Info lebih lengkap...</a>
                    </div>
                    @*</div>*@
                    @*</div>*@
                </div>
            }
        </div>
    </div>
    <div class="card-footer">
        Menampilkan @Model.PageIndex dari @Model.TotalPages
        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link @prevDisabled"
                       asp-action="ListDokter"
                       asp-route-sortOrder="@ViewBag.CurrentSort"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-currentFilter="@ViewBag.CurrentFilter"
                       asp-route-pageSize="@ViewBag.CurrentPageSize">
                       Previous
                   </a>
                </li>
               
                <li class="page-item @nextDisabled"><a class="page-link" asp-action="ListDokter"
                   asp-route-sortOrder="@ViewBag.CurrentSort"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewBag.CurrentFilter"
                   asp-route-pageSize="@ViewBag.CurrentPageSize">
                   Next
                   </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
    




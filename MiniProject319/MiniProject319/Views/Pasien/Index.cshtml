
@using MiniProject319.ViewModels;


@model PaginatedList<VMPasien>


<div class="pagetitle">
    <h1>Profile</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item active">Profile</li>
            <li class="breadcrumb-item active">Pasien</li>

        </ol>
    </nav>
</div><!-- End Page Title -->

        <section class="section profile">
            <div class="row">
                <div class="col-xl-4">

                    <div class="card">
                        <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                            <div class="profile-img-container position-relative">
                                <i id="editdata" class="bi bi-pencil-square bi-lg position-absolute top-0 end-0"></i>
                                <img src="assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                            </div>
                            <h2>Bronze Member</h2>
                            <h3>Since 2020</h3>
                            <br />
                            <br />
                            <br />
                            <br />

                            <div class="text-start mt-3">
                                 <a class="nav-link " asp-controller="Pasien" asp-action="Index">
                                <h3>Pasien</h3> <br />
                                </a>
                                <h3>Pembelian Obat</h3><br />
                                <h3>Rencana Kedatangan</h3><br />
                                <h3>Riwayat Chat Dokter</h3>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-xl-8">

                    <div class="card">
                        <div class="card-body pt-3">
                            <!-- Bordered Tabs -->
                            <ul class="nav nav-tabs nav-tabs-bordered">

                                <li class="nav-item">
                                    <h2>Daftar Pasien</h2>
                                </li>
                            </ul>


                            <div class="tab-content pt-2">

                                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                                    <div class="container">

                                     

                                        
                                    <div class="row">
                                        <div class="col-md-4">
                                            <form asp-action="Index" asp-route-pageSize="@ViewBag.CurrentPageSize">
                                                <div class="input-group">
                                                    <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control" placeholder="Search..">
                                                    <div class="input-group-prepend">
                                                        <button type="submit" class="btn btn-outline-secondary" title="Search">
                                                            <i class="bi bi-search"></i>
                                                        </button>
                                                    </div>
                                                    <div class="input-group-prepend">
                                                        <a class="btn btn-outline-secondary" asp-action="Index" title="Reset">
                                                            <i class="bi bi-arrow-repeat"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>

                                      @*      <div class="col-md-4">
                                                <div class="d-flex justify-content-end align-items-center">
                                                    <label class="form-label me-2">Urutkan</label>
                                                    <select class="form-select">
                                                        <option selected>Nama</option>
                                                        <option>...</option>
                                                        <option>...</option>
                                                    </select>
                                                </div>
                                            </div>*@
                                        </div>

                                        <br />

                                    

                                        <div class="d-flex justify-content-between">
                                            <button type="submit" id="btn_multiple_delete" class="btn btn-danger" disabled>
                                                <i class="bi bi-trash "></i>
                                            </button>
                                 

                                
                                    <div class="col-md-8">
                                        <div class="d-flex align-items-center justify-content-end mt-2">

                                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.AgeSort"
                                               asp-route-currentFilter="@ViewBag.CurrentFilter"
                                               asp-route-pageSize="@ViewBag.CurrentPageSize">
                                                <i class="bi bi-sort-numeric-up"></i>
                                            </a>

                                            <span style="margin-right: 10px;"></span>

                                            <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort"
                                               asp-route-currentFilter="@ViewBag.CurrentFilter"
                                               asp-route-pageSize="@ViewBag.CurrentPageSize">
                                            <i class="bi bi-sort-alpha-up"></i>
                                            </a>

                                            <span style="margin-right: 10px;"></span>
                                            <!-- Wrap the buttons and dropdown in a flex container -->
                                            <form asp-action="Index" id="form_pagesize" class="d-flex align-items-center mb-0">
                                                <!-- Add "d-flex align-items-center" classes for vertical alignment -->
                                                <select name="PageSize" id="PageSize" class="form-control form-control-sm">
                                                    <!-- Use "form-control-sm" class to reduce the size of the dropdown -->
                                                    <option value="3">3</option>
                                                    <option value="5">5</option>
                                                    <option value="10">10</option>
                                                </select>
                                            </form>
                                            <button id="btn_create" class="btn btn-primary ms-2">
                                                <!-- Use ms-2 class to add a margin on the left side -->
                                                <i class="bi bi-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>




                                        <table class="table table-hover mb-3">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th></th>
                                                    <th> </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                        @if (Model.Count != 0)
                                        {

                                            @foreach (var pasien in Model)
                                            {


                                                <tr>


                                                    <!-- Di dalam tabel -->
                                                    <td>

                                                        <input type="checkbox" onchange="selectedItem()" class="mychecked" value="@pasien.Id">
                                                    </td>
                                                    <td>
                                                        @if (pasien.Dob != null)
                                                        {
                                                            @pasien.Fullname
                                                            int umur = DateTime.Now.Year - pasien.Dob.Value.Year;
                                                            <div style="font-size: 11px; ">
                                                                @umur Tahun, @pasien.Name
                                                            </div>
                                                            <div style="font-size: 11px; ">
                                                                3 Chat Online, 2 Janji dokter
                                                            </div>
                                                        }
                                                    </td>




                                                    <td>
                                                        <div class="d-flex justify-content-end">
                                                            <a class="btn btn-success btn_edit" style="margin-right: 10px;"  dataid="@pasien.Id"><i class="bi bi-pencil"></i></a>
                                                            <a class="btn btn-danger btn_delete" dataid="@pasien.Id"><i class="bi bi-trash"></i>

                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td class="text-center" colspan="2">
                                                    <i> Tidak ada data yang mengandung kata @ViewBag.CurrentFilter</i>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>

                                        </table>

                                @{
                                    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                                    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                                }
                                <div class="row">
                                    <div class="col-10">
                                        entries from @Model.TotalData data
                                    </div>
                                    <div class="col-2 d-flex justify-content-end">
                                        <a asp-action="Index"
                                           asp-route-sortOrder="@ViewBag.CurrentSort"
                                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                                           asp-route-currentFilter="@ViewBag.CurrentFilter"
                                           asp-route-pageSize="@ViewBag.CurrentPageSize"
                                           class="btn btn-outline-secondary @prevDisabled bi bi-chevron-left">
                                            
                                        </a>
                                        <a asp-action="Index"
                                           asp-route-sortOrder="@ViewBag.CurrentSort"
                                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                                           asp-route-currentFilter="@ViewBag.CurrentFilter"
                                           asp-route-pageSize="@ViewBag.CurrentPageSize"
                                           class="btn btn-outline-secondary @nextDisabled bi bi-chevron-right">
                                            
                                        </a>
                                    </div>
                                </div>
                            </div>

                                </div><!-- End Bordered Tabs -->

                            </div>
                     
                        </div>

                    </div>
                </div>
                        
            </div>
        </section>




      

 
    <script>

    var listId = []

    function selectedItem() {
        var mychecked = $(".mychecked")
        listId = []
        for (var i = 0; i < mychecked.length; i++) {
            if (mychecked[i].checked) {
                listId.push(mychecked[i].value)
            }

        }

        if (listId.length > 0) {
            $("#btn_multiple_delete").attr("disabled", false)
        }
        else {
            $("#btn_multiple_delete").attr("disabled", true)
        }
    }

    $("#btn_multiple_delete").click(function () {
        $("#modal_body").empty()
        $("#modal_body").load("/Pasien/MultipleDelete", { listId: listId })
        $("#modal").modal("show")
    })


    $("#PageSize").val(@ViewBag.CurrentPageSize)
    $("#PageSize").change(function () {
        $("#form_pagesize").submit();
    }) 

    $("#btn_create").click(function () {
       
            $("#modal_body").empty()
            $("#modal_body").load("/Pasien/Create")
            $("#modal").modal("show")
        })

    $(".btn_edit").click(function () {

        var id = $(this).attr("dataid")

        $("#modal_body").empty()
        $("#modal_body").load("/Pasien/Edit?id=" + id)
        $("#modal").modal("show")
    })

    $(".btn_delete").click(function () {

        var id = $(this).attr("dataid")

        $("#modal_body").empty()
        $("#modal_body").load("/Pasien/Delete?id=" + id)
        $("#modal").modal("show")
    })

    </script>
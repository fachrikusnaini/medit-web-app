@using MiniProject319.ViewModels
@model VMPasien;

@{
    ViewData["Title"] = "Edit Pasien";
}
<div class="card">
    <div class="card-body">
        <div class="card-title">@ViewData["Title"]</div>
        <form asp-action="Edit" method="post" id="form_input">
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />

            <input type="hidden" id="ParentBiodataId" name="ParentBiodataId" value="@Model.ParentBiodataId" />

            <div class="mb-4 row">
                <label for="FullName" class="col-sm-4 col-form-label">NamaLengkap</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.Fullname" required>
                    <span id="validate_Fullname" class="text-black-danger"></span>
                </div>
            </div>
            <div class="mb-4 row">
                <label for="Dob" class="col-sm-4 col-form-label">Tanggal Lahir</label>
                <div class="col-sm-12">
                    <input type="date" class="form-control" id="Dob" name="Dob" value="@Model.Dob?.ToString("yyyy-MM-dd")" max="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Height">Height</label>
                    <input type="number" class="form-control" id="Height" name="Height" value="@Model.Height" >
                </div>
                <div class="form-group col-md-6">
                    <label for="Weight">Weight</label>
                    <input type="number" class="form-control" id="Weight" name="Weight" value="@Model.Weight" >
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Code">Type Darah</label>
                    @Html.DropDownList("BloodGroupId", new SelectList(ViewBag.bloodGroups, "Id", "Code"), "-- Pilih Golongan Darah --", new { @class = "form-control" })
                </div>
                <div class="form-group col-md-2">
                    <label for="Rhtype">Rh Type</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="RhesusType" name="RhesusType" value="Rh+" @(Model.RhesusType == "Rh+" ? "checked" : "") >
                        <label class="form-check-label" for="Rh+">Rh+</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="RhesusType" name="RhesusType" value="Rh-" @(Model.RhesusType == "Rh-" ? "checked" : "") >
                        <label class="form-check-label" for="Rh-">Rh-</label>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label for="Gender">Gender</label>
                    <div class="form-check">
                        <label class="form-check-label" for="Pria">Pria</label>
                        <input class="form-check-input" type="radio" id="Gender" name="Gender" value="P" @(Model.Gender == "P" ? "checked" : "") required>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label" for="Wanita">Wanita</label>
                        <input class="form-check-input" type="radio" id="Gender" name="Gender" value="W" @(Model.Gender == "W" ? "checked" : "") required>
                    </div>
                </div>
                <div class="mb-4 row">
                    <label for="Name" class="col-sm-4 col-form-label">Relasi</label>
                    <div class="col-sm-12">
                        @Html.DropDownList("CustomerRelationId", new SelectList(ViewBag.customerRelations, "Id", "Name"), "-- Pilih Relasi --", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Input</button>
                    <a class="btn btn-dark" asp-controller="Pasien" asp-action="Index">Back</a>
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>

</div>

<script>
    $("#form_input").validate({
        errorClass: "text-danger",
        rules: {
            FullName: {
                required: true,
                minlength: 5,
            },
            Dob: {
                required: true,
            },
            CustomerRelationId: {
                required: true,
            },
            Height: {
                min: 0,
            },
            Weight: {
                min: 0,
            },

        },
        messages: {
            FullName: {
                required: "Tolong isi Nama",
                minlength: "Tolong Lebih Dari 5 karakter",
            },
            Dob: {
                required: "Tolong isi Tanggal Lahir",
            },
            CustomerRelationId: {
                required: "Tolong Pilih Relasi",
            },
            Height: {
                min: "Height Cannot Under 0",
            },
            Weight: {
                min: "Weight Cannot Under 0",
            },
        },
        submitHandler: function (form) {
            var dataForm = $(form).serialize();
            fungsiSubmit(dataForm);
        }
    });

    function fungsiSubmit(dataParam) {
        $.ajax({
            url: '/Pasien/Edit',
            type: "post",
            data: dataParam,
            dataType: "json",
            success: function (respon) {
                var data = respon.dataRespon;
                if (data.success) {
                    $("#modal").modal("hide");
                    toastr.success(
                        data.message,
                        '',
                        {
                            timeOut: 1000,
                            fadeOut: 1000,
                            onHidden: function () {
                                window.location.reload();
                            }
                        }
                    );
                }
                else {
                    // Use toastr.error to display the error message
                    toastr.error(data.message);
                }
            }
        });
    }
</script>
              <!-- General Form Elements -->
              <form>
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                <div class="row mb-3">
                  <label for="NameUser" class="col-sm-8 col-form-label">Nama Lengkap</label>
                  <div class="col-sm-13">
                    <input type="text" class="form-control" id="NameUser" name="NameUser" value="@Model.Fullname">
                  </div>
                </div>



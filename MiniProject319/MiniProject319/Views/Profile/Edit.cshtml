            <div class="row mb-3">
                <label for="DoBUser" class="col-sm-2 col-form-label">Tanggal Lahir</label>
                <div class="col-sm-10 input-group">
                    @{
                        string formattedDate = Model.Dob?.ToString("yyyy-MM-dd"); // Format the date as "2000-10-02" for input field
                        string displayedDate = Model.Dob?.ToString("dd MMMM yyyy"); // Format the date as "02 October 2000" for display
                    }
                    <input type="text" class="form-control" id="DoBUserDisplay" value="@displayedDate" readonly>
                    <input type="date" class="form-control d-none" id="DoBUser" name="DoBUser" value="@formattedDate">
                    <span class="input-group-text" onclick="toggleDatePicker()"><i class="bi bi-calendar"></i></span>
                </div>
            </div>

                <div class="row mb-3">
                  <label for="NoHP" class="col-sm-2 col-form-label">Number</label>
                  <div class="col-sm-13">
                    <input type="number" class="form-control" id="NoHP" name="NoHP" value="@Model.MobilePhone">
                </div>
                </div>
         <br />
            
                <div class="row mb-3">
                  <div class="col-sm-10">
                    <button class="btn btn-dark=" asp-controller="Profile" asp-action="Index">Batal</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </div>

              </form><!-- End General Form Elements -->

            </div>
          </div>
          <!--END FORM-->



<script>
    function toggleDatePicker() {
        var inputDate = document.getElementById("DoBUser");
        var inputDateDisplay = document.getElementById("DoBUserDisplay");

        if (inputDateDisplay.classList.contains("d-none")) {
            inputDateDisplay.classList.remove("d-none");
            inputDate.classList.add("d-none");
        } else {
            inputDateDisplay.classList.add("d-none");
            inputDate.classList.remove("d-none");
        }
    }
</script>
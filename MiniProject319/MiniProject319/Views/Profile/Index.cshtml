@using MiniProject319.ViewModels;


@model VMUser


  

    <div class="pagetitle">
      <h1>Profile</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item">Home</li>
          <li class="breadcrumb-item active">Profile</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
      <div class="row">
        <div class="col-xl-4">

          <div class="card">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                            <div class="profile-img-container position-relative">
                                <i id="editdata" class="bi bi-pencil-square bi-lg position-absolute top-0 end-0"></i>
                                <img src="assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                            </div>

                            
              <h2>Bronze Member</h2>
              <h3>Since 2020</h3>
             <br />
             <br />
             <br />
             <br />

                        <div class="text-start mt-3">
                                <a class="nav-link " asp-controller="Pasien" asp-action="Index">
                                    <h3>Pasien</h3> <br />
                                </a>
                                <h3>Pembelian Obat</h3><br />
                                <h3>Rencana Kedatangan</h3><br />
                            <h3>Riwayat Chat Dokter</h3> 
                        </div>
            </div>
          </div>

        </div>
        

        <div class="col-xl-8">

          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->
              <ul class="nav nav-tabs nav-tabs-bordered">

                <li class="nav-item">
                  <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Profil</button>
                </li>

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#">Alamat</button>
                </li>

                <li class="nav-item">
                  <button class="nav-link" data-bs-toggle="tab" data-bs-target="#">Pembayaran</button>
                </li>



              </ul>

              
          <div class="tab-content pt-2">

            <div class="tab-pane fade show active profile-overview" id="profile-overview">
              <div class="container">
                                        <div class="row">
                                            
                                                <div class="d-flex align-items-center">
                                                    <h5 class="card-title">
                                                    Data Pribadi
                                                    </h5>

                                                <a class="bi bi-pencil-square bi-lg ms-2 editdat " dataid="@Model.Id"></a>
                                                  
                                                </div>
                                            
                                        </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label ">Nama Lengkap</div>
                    <div class="col-lg-9 col-md-8">@Model.Fullname</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Tanggal Lahir</div>
                    <div class="col-lg-9 col-md-8">@Model.Dob?.ToString("dd MMMM yyyy")</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Nomor Handphone</div>
                    <div class="col-lg-9 col-md-8">@Model.MobilePhone</div>
                  </div>
                  <br />

                  <h5 class="card-title">Data Akun</h5>
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-lg-3 col-md-4 label">Email</div>
                                            <div class="col-lg-6 col-md-8 d-flex align-items-center">
                                                <input type="text" class="form-control flex-grow-1" value="@Model.Email">

                                            <a class="bi bi-pencil-square bi-lg ms-2 editemail " dataid="@Model.Id"></a>
                                                    
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-3 col-md-4 label">Password</div>
                                            <div class="col-lg-6 col-md-8 d-flex align-items-center">
                                                <input type="password" class="form-control flex-grow-1" value="@Model.Password" >
                                                   
                                                        <a class="bi bi-pencil-square bi-lg ms-2 editpass "  dataid="@Model.Id"></a>
                                                    
                                        </div>
                                    </div>


                  <br />
                  <br />
                </div>

              </div><!-- End Bordered Tabs -->

            </div>
           
          </div>

        </div>
      </div>
      </div>

      </div>
    </section>

 

  <script>
    $(".editdat").click(function () {
      
        var id = $(this).attr("dataid")

        $("#modal_body").empty()
        $("#modal_body").load("/Profile/Edit?id=" + id)
        $("#modal").modal("show")
    })

    $(".editemail").click(function () {

        var id = $(this).attr("dataid")

        $("#modal_body").empty()
        $("#modal_body").load("/Profile/EditEmail?id=" + id)
        $("#modal").modal("show")
    })

    $(".editpass").click(function () {

        var id = $(this).attr("dataid")

        $("#modal_body").empty()
        $("#modal_body").load("/Profile/EditPass?id=" + id)
        $("#modal").modal("show")
    })

    //$(".editdat").click(function () {

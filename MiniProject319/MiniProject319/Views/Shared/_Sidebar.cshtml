@using MiniProject319.Services;
@using MiniProject319.ViewModels;

@inject MenuService menuService;
@{
    int IdRole = Context.Session.GetInt32("RoleId") ?? 0;
    List<VMListMenu> vMListMenu = await menuService.GetListMenu(IdRole);
}

@if(IdRole != 0)
{
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-grid"></i>
                    <span>List Menu</span>
                </a>
            </li>
            @foreach (var parent in vMListMenu)
            {
                if(parent.ListChild.Count > 0)
                { 
                    <li class="nav-item">
                        <a class="nav-link collapsed" data-bs-target="#forms-nav" data-bs-toggle="collapse">
                            <i class="bi bi-menu-button-wide"></i><span>@parent.MenuName</span>
                        </a>
                        <ul id="forms-nav" class="nav-content collapse">

                            @foreach (var menuChild in parent.ListChild)
                            {

                                <li>
                                    <a class="dropdown-item" href="#">
                                        @menuChild.MenuName
                                    </a>
                                </li>

                            }

                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link collapsed">
                            <i class="bi bi-menu-button-wide"></i><span>@parent.MenuName</span>
                        </a>
                    </li>
                }
            }

            <li><hr class="nav-divider" /></li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Dokter" asp-action="ListDokter">
                    <i class="bi bi-menu-button-wide"></i><span>Daftar Nama Dokter</span>
                </a>
            </li>

            <li><hr class="nav-divider" /></li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Auth" asp-action="Logout">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Logout</span>
                </a>
            </li>

        </ul>

    </aside>

    <script>
        $("#cari_dokter").click(function () {
            $("#modal-body").empty()
            $("#modal-body").load("/Dokter/ModalCariDokter")
            $("#verticalycentered").modal("show")
        });
    </script>


}





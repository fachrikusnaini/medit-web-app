@{
    int RoleId = Context.Session.GetInt32("RoleId") ?? 0;
    string Email = Context.Session.GetString("Email") ?? "";
    string Image = Context.Session.GetString("ImagePath") ?? "";
}

<!-- ======= Header Start======= -->
<header id="header" class="header fixed-top d-flex align-items-center">
    <div class="d-flex align-items-center justify-content-between">
        <a class="logo d-flex align-items-center" asp-controller="Home" asp-action="Index">
            <img src="~/assets/img/new-logo-medit.png" alt="logo-medit" style="height:max-content">
        </a>
        @{
            if(RoleId != 0)
            {
                <i class="bi bi-list toggle-sidebar-btn"></i>
            }
        }
    </div><!-- End Logo -->

    <div class="search-bar">
        <form class="search-form d-flex align-items-center w-100" method="POST" action="#">
            <input type="text" name="query" placeholder="Cari Dokter atau Faskes" title="Enter search keyword">
            <button type="submit" title="Search"><i class="bi bi-search"></i></button>
        </form>
    </div><!-- End Search Bar -->

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">

            <li class="nav-item d-block d-lg-none">
                <a class="nav-link nav-icon search-bar-toggle" href="#">
                    <i class="bi bi-search"></i>
                </a>
            </li><!-- End Search Icon-->

            @{
                string Name = Context.Session.GetString("Name") ?? "";

                if(RoleId != 0)
                {
                    <li class="nav-item dropdown pe-3">

                        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                            <span class="d-none d-md-block me-3">Hello, @Name!</span>
                            <img src="~/images/@Image" alt="Profile" class="rounded-circle">
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                            
                            <li>
                                <a class="dropdown-item d-flex align-items-center" asp-controller="DoctorProfile" asp-action="Detail">
                                    <i class="bi bi-person"></i>
                                    <span>My Profile</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" asp-controller="Auth" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span>Sign Out</span>
                                </a>
                            </li>

                        </ul><!-- End Profile Dropdown Items -->
                    </li>

                    <!-- End Profile Nav -->
                }
                else
                {
                    <li class="nav-item pe-3">
                        <button class="btn btn-outline-secondary me-3" disabled>Daftar</button>
                        <button type="button" class="btn btn-primary" id="btn-login">Masuk</button>
                    </li>
                }
            }

        </ul>
    </nav><!-- End Icons Navigation -->
</header><!-- End Header -->


<script>
    $("#btn-login").click(function(){
        $("#modal-body").empty()
        $("#modal-body").load("/Auth/Login")
        $("#verticalycentered").modal("show")
    });

    //$(".btn_detail").click(function () {
    //    var id = $(this).attr("dataid")
    //    $("#main").load("/DoctorProfile/Detail?id=" + id)
    //})
</script>
    

@using MiniProject319.DataModels;
@using MiniProject319.ViewModels;

@model PaginatedList<MPaymentMethod>
@{
    ViewData["Title"] = "TUTORIAL PAYMENT";
}
<main id="main" class="main">
    <section class="section dashboard">
        <div class="row">
            <div class="card">
                <form asp-action="Index" method="get" id="form_search">
                    <div class="card-body">

                        <h1 class="card-title">@ViewData["Title"]</h1>

                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <input type="text" class="form-control border-info" id="searchString" name="searchString"
                                           value="@ViewBag.currentFilter" placeholder="Search.." />
                                    <div class="input-group-prepend">
                                        <div class="input-group-text border-info" style="cursor:pointer" id="btn_search"><i class="bi bi-search"></i></div>
                                    </div>
                                    <div class="input-group-prepend">
                                        <div class="input-group-text border-info" style="cursor:pointer" id="btn_reset"><i class="bi bi-arrow-repeat"></i></div>
                                    </div>

                                    <div class="input-group w-50 justify-content-end">
                                        <button type="button" class="btn btn-primary btn-rounded" id="btn_create">
                                            Tambah Data
                                        </button>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort"
                                           asp-route-currentFilter="@ViewBag.currentFilter"
                                           asp-route-pageNumber="@ViewBag.PageIndex"
                                           asp-route-showData="@ViewBag.currentShowData">
                                            NAMA
                                        </a>
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (Model.Count > 0)
                                    {
                                        int i = 0;
                                        foreach (MPaymentMethod item in Model)
                                        {
                                            i++;
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.Name</td>
                                                <td>
                                                    <a class="btn btn-outline-primary btn_edit" dataid="@item.Id">Edit</a>
                                                    <a class="btn btn-outline-danger btn_delete" dataid="@item.Id">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>Data not found @ViewBag.currentFilter</td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>

                        <div class="row mb-3">
                            <div class="col-sm-12">
                                <div class="d-flex justify-content-between">
                                    <div class="col-2">
                                    </div>
                                    @{
                                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                                    }
                                    <div class="w-30">
                                        Page @Model.PageIndex of @Model.TotalPages
                                        <a asp-action="Index"
                                           asp-route-sortOrder="@ViewBag.CurrentSort"
                                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                                           asp-route-currentFilter="@ViewBag.CurrentFilter"
                                           asp-route-showData="@ViewBag.currentShowData"
                                           class="btn btn-primary @prevDisabled">
                                            Previous
                                        </a>
                                        <a asp-action="Index"
                                           asp-route-sortOrder="@ViewBag.CurrentSort"
                                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                                           asp-route-currentFilter="@ViewBag.CurrentFilter"
                                           asp-route-showData="@ViewBag.currentShowData"
                                           class="btn btn-primary @nextDisabled">
                                            Next
                                        </a>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>

                </form>
            </div>

        </div>
    </section>

</main><!-- End #main -->
<script>
    $("#btn_search").click(function () {
        $("#sort_change").val("@ViewBag.CurrentSort")
        $("#form_search").submit()
    });

    $("#btn_reset").click(function () {
        $("#searchString").val("")
        $("#form_search").submit()
    });

    $("#PageSize").val(@ViewBag.CurrentPageSize)
    $("#PageSize").change(function () {
        $("form_pageSize").val("@ViewBag.CurrentSort")
        $("#form_pagesize").submit()
    });

    $("#btn_create").click(function () {
        $("#modal_body").empty()
        $("#modal_body").load("/Payment/Create")
        $("#modal").modal("show")
    });

    $(".btn_edit").click(function () {
        var id = $(this).attr("dataid")

        $("#modal_body").empty()
        $("#modal_body").load("/Payment/Edit?id=" + id)
        $("#modal").modal("show")
    });

    $(".btn_delete").click(function () {
        var id = $(this).attr("dataid")

        $("#modal_body").empty()
        $("#modal_body").load("/Payment/Delete?id=" + id)
        $("#modal").modal("show")
    });
</script>
